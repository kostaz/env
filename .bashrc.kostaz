function f()
{
	term=$@
	find . -iname "*${term}*"
}

function f1()
{
	term=$@
	find . -maxdepth 1 -iname "*${term}*"
}

function sf()
{
	term=$@
	find . -name "*${term}*"
}

function ffraw()
{
	term=$@
	find . -not -type d -iname "*${term}*"
}

function ff()
